{
  "name": "ts-code-graph",
  "version": "0.0.1",
  "description": "Analyze TypeScript/Next.js codebase structure and visualize function call relationships",
  "keywords": [
    "typescript",
    "ast",
    "code-analysis",
    "call-graph",
    "nextjs",
    "mcp"
  ],
  "homepage": "https://github.com/shion555/ts-code-graph#readme",
  "bugs": {
    "url": "https://github.com/shion555/ts-code-graph/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shion555/ts-code-graph.git"
  },
  "license": "MIT",
  "author": "shion",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "ts-code-graph": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/cli.ts",
    "prepare": "husky",
    "test": "vitest",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test:coverage": "vitest run --coverage",
    "mcp": "tsx src/mcp/server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "better-sqlite3": "^12.5.0",
    "commander": "^14.0.2",
    "ts-morph": "^27.0.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
